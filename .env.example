# =============================================
# Service Configuration
# =============================================
SERVICE_ENVIRONMENT=production
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
# 工作进程数，如果留空，将根据CPU核心数自动计算 (推荐)
SERVICE_WORKERS=
SERVICE_LOG_LEVEL=INFO
SERVICE_CORS_ORIGINS="*"

# =============================================
# Gemini API Configuration - [REQUIRED]
# =============================================
# [cite_start]‼️ [必需] Gemini API 密钥，多个用逗号隔开，不要加引号 [cite: 6]
GEMINI_API_KEYS=your-google-ai-api-key-1,your-google-ai-api-key-2

# =============================================
# Security Configuration - [REQUIRED]
# =============================================
# [cite_start]‼️ [必需] 客户端API密钥，用于应用访问 [cite: 7]
# 生成命令: openssl rand -hex 32
SECURITY_ADAPTER_API_KEYS=your-secure-client-key

# (推荐) [cite_start]管理员API密钥，用于访问管理端点 [cite: 8]
SECURITY_ADMIN_API_KEYS=your-secure-admin-key

# =============================================
# Optional: Rate Limiting & Performance
# =============================================
# 是否启用速率限制
SECURITY_ENABLE_RATE_LIMITING=True
# 在指定时间窗口内的最大请求数
SECURITY_RATE_LIMIT_REQUESTS=100
# 速率限制的时间窗口（秒）
SECURITY_RATE_LIMIT_WINDOW=60

# 是否启用缓存
CACHE_ENABLED=True
# 缓存有效期（秒）
CACHE_TTL=300

# =============================================
# Optional: Advanced Behavior
# =============================================
# 失败的Gemini密钥冷却时间（秒）
GEMINI_COOLING_PERIOD=300
# Gemini API请求超时时间（秒）
GEMINI_REQUEST_TIMEOUT=120
# 单次请求的最大重试次数
GEMINI_MAX_RETRIES=2
